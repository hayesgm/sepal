    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="A Blog in the Life of a Developer">
    <meta name="author" content="Geoff Hayes">

    <title>I Passed Along the Way...</title>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
